/* test.wxss */

.testCss {
  padding: 0px;
}

.testCss .tab1 {
  /* height: 50px; */
  text-align: center;
  align-items: center;
  padding: 20px;
}

.testCss .tab1 .name {
  font-size: 20pt;
  margin-top: 20px;
}

.testCss .area {
  display: flex;
  border: 1px solid #e0e0e0;
  padding: 10px;
  margin: 10px;
  border-radius: 9px;
}

.testCss .area:hover {
  background: #e0e0e0;
}

.testCss .area:active {
  border: 1px solid blue;
}

.testCss .area .id {
  margin-right: 10px;
}

.testCss .area .name {
  flex: 1;
  text-align: center
}